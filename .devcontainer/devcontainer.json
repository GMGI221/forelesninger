{
  "name": "Conda Jupyter Codespace",
  // Use the minimal base image for stability
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu", 

  "features": {
    // Use the Python Feature with Conda installation
    "ghcr.io/devcontainers/features/python:1": {
      "installConda": true,
      "condaEnvironmentFile": "gmgi221.yml",
      "condaEnvironment": "gmgi221" // ðŸ‘ˆ Match name from YML
    }
  },

  // ðŸ‘ˆ Use a simpler command to activate and start Jupyter.
  // The Python feature should handle the 'conda' command being available.
  "postCreateCommand": "conda run -n gmgi221 jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root &",

  // Explicitly forward the port, although Codespaces usually finds 8888
  "forwardPorts": [8888], 

  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
