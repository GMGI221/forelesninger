{
  "name": "Conda Jupyter Codespace",
  
  // Use a base image that supports installing features
  "image": "mcr.microsoft.com/devcontainers/base:ubuntu", 

  // Add the Conda/Mamba feature, pointing it to your environment file
  "features": {
    "ghcr.io/devcontainers/features/python:1": {
      "installConda": "true",
      "environmentFile": "gmgi221.yml" // <-- IMPORTANT: Name of your Conda file
    }
  },

  // Set the default shell command to activate the environment
  // This ensures your Conda environment is active in the terminal
  "postCreateCommand": "source /usr/local/share/miniconda/etc/profile.d/conda.sh && conda activate gmgi221 && jupyter lab --ip=0.0.0.0 --port=8888 --no-browser --allow-root &",
  //"postCreateCommand": "echo \"Environment created. You can start Jupyter Lab directly.\"", 
  
  // Optional: Recommended VS Code extensions for Python and Jupyter
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter"
      ]
    }
  }
}
